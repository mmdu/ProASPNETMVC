@model Razor.Models.Product[]

@{
    ViewBag.Title = "DemoArray";
    Layout = "~/Views/_BasicLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
 @if (Model.Length > 0)
 {
     <table>
         <thead><tr><th>Product</th><th>Price</th></tr></thead>
         <tbody>
         @foreach (Razor.Models.Product p in Model)
         {
             <tr>
                 <td>@p.Name</td>
                 <td> @p.Price</td>
             </tr>
         }
         </tbody>
     </table>
 }
 else
 {
     <h2> no product data</h2>
 }

</body>
</html>